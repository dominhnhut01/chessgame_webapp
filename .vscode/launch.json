    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Typescript",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/src/index.ts",
            "runtimeArgs": ["-r", "${workspaceFolder}/backend/node_modules/ts-node/register", "-r", "${workspaceFolder}/backend/node_modules/tsconfig-paths/register"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}